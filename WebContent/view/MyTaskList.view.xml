<mvc:View
	controllerName="com.tasky.controller.MyTaskList"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic">
	<semantic:MasterPage
		title="{i18n>TASKLIST.TITLE}">
		<semantic:subHeader>
			<Bar>
				<contentMiddle>
					<SearchField id="taskSearchField"
						placeholder="{i18n>TASKSEARCH.PLACEHOLDER}"
						liveChange="onLiveChangeTaskSearch" />
				</contentMiddle>
			</Bar>
		</semantic:subHeader>

		<semantic:addAction>
			<semantic:AddAction press="onPressNewTask" />
		</semantic:addAction>
		<semantic:deleteAction>
			<semantic:DeleteAction press="onPressDeleteTask" />
		</semantic:deleteAction>

		<List id="taskList"
			items="{/Tasks}"
			mode="SingleSelectMaster"
			includeItemInSelection="true"
			noDataText="{i18n>GENERAL.APP.NO_TASKS}"
			itemPress="onSelectTask"
			updatedStarted="onUpdateStarted"
			updateFinished="onUpdateFinished">
			<items>
				<ObjectListItem type="Active">
					<firstStatus>
						<ObjectStatus text="{status}" />
					</firstStatus>
					<attributes>
						<ObjectAttribute title="{i18n>TASK.TITLE}" text="{title}" />
						<ObjectAttribute title="{i18n>TASK.DESCRIPTION}" text="{description}" />
		        	</attributes>
				</ObjectListItem>
			</items>
		</List>
	</semantic:MasterPage>
</mvc:View>
