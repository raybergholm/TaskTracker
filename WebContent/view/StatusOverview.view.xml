<mvc:View
	controllerName="com.tasky.controller.StatusOverview"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="{i18n>OVERVIEW.TITLE}">
		<headerContent>
			<core:Fragment fragmentName="com.tasky.fragment.DetailNavigationButtons" type="XML" />
		</headerContent>
		<VBox
			height="100%"
			alignItems="Center"
			justifyContent="Center">
			<core:Icon src="sap-icon://wrench" size="10rem" color="#E69A17" />
			<Text text="In development. Though, I'm pretty sure this will still be done before the LÃ¤nsimetro." />
		</VBox>
        <footer>
			<Bar>
                <contentRight>
    				<Button id="saveButton"
                        icon="sap-icon://save"
                        text="{i18n>ACTIONS.SAVE}"
                        type="Accept"
                        press="onPressSave" />
    			</contentRight>
            </Bar>
		</footer>
	</Page>
</mvc:View>
