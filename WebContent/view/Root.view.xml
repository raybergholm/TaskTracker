<core:View
	controllerName="com.tasky.controller.Root"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<SplitApp id="TaskyApp"
		initialMaster="MyTaskList"
		initialDetail="TaskDetail">
		<masterPages>
			<mvc:XMLView id="MyTaskList" viewName="com.tasky.view.MyTaskList" />
		</masterPages>
		<detailPages>
			<mvc:XMLView id="TaskDetail" viewName="com.tasky.view.TaskDetail" />
			<mvc:XMLView id="StatusOverview" viewName="com.tasky.view.StatusOverview" />
			<mvc:XMLView id="UserSettings" viewName="com.tasky.view.UserSettings" />
		</detailPages>
	</SplitApp>
</core:View>
